{
  "title": "Audio Software Catalogue",
  "port": 80,
  "bootstrap": {
    "tables": [
      {
        "name": "type",
        "schema": {
          "name": "TEXT PRIMARY KEY NOT NULL",
          "description": "TEXT"
        }
      },
      {
        "name": "company",
        "schema": {
          "name": "TEXT PRIMARY KEY NOT NULL",
          "website": "TEXT",
          "username": "TEXT",
          "password": "TEXT"
        }
      },
      {
        "name": "manager",
        "schema": {
          "name": "TEXT PRIMARY KEY NOT NULL",
          "description": "TEXT"
        }
      },
      {
        "name": "product",
        "schema": {
          "id": "INTEGER PRIMARY KEY AUTOINCREMENT",
          "company": "TEXT NOT NULL",
          "name": "TEXT NOT NULL",
          "serial": "TEXT",
          "manager": "TEXT",
          "type": "TEXT",
          "url": "TEXT",
          "description": "TEXT"
        },
        "constraints": [
          "FOREIGN KEY(company) REFERENCES company(name) ON UPDATE CASCADE",
          "FOREIGN KEY(type) REFERENCES type(name) ON UPDATE CASCADE",
          "FOREIGN KEY(manager) REFERENCES manager(name) ON UPDATE CASCADE"
        ]
      }
    ],
